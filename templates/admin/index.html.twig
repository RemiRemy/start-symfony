{% extends 'base.html.twig' %}

{% block title %}Administration
{% endblock %}


{% block body %}
	{# *****************************************************************setting carousel**************************************************************** #}

	<a class="btn btn-primary" href="{{path('creation-carousel')}}">New carousel</a>

	<table class="table">

		<thead>

			<tr>

				<th>ID</th>

				<th>Image</th>

				<th>Titre</th>

				<th>Slogan</th>

				<th>Actions</th>

			</tr>

		</thead>

		<tbody>

			{% for slide in detailSlide %}

				<tr>
					<td>{{slide.id}}</td>
					<td><img style="width:50px;height:50px" src="/uploads/{{slide.nomImage}}"></td>
					<td>{{slide.titre}}</td>
					<td>{{slide.texte}}</td>

					<td>
						<a class="btn text-decoration-none badge bg-success" href="{{path('modif-carousel', {id:slide.id})}}">Modifier</a>
						<a class="btn text-decoration-none badge bg-danger" href="{{path('suppression_slide',{id:slide.id})}}">Supprimer</a>
					</td>
				</tr>

			{% endfor %}


		</tbody>

	</table>


	{# *************************************************************article produit******************************************************************* #}

	<a class="btn btn-primary" href="{{path('creation_produit')}}">Nouveau Produit</a>


	<table class="table">

		<thead>

			<tr>

				<th>ID</th>

				<th>Image</th>

				<th>DÃ©signation</th>

				<th>Description</th>

				<th>Prix</th>

				<th>Actions</th>

			</tr>

		</thead>

		<tbody>

			{% for produit in listeProduit %}

				<tr>
					<td>{{produit.id}}</td>
					<td><img style="width:50px;height:50px" src="/uploads/{{produit.nomImage}}"></td>
					<td>{{produit.designation}}</td>
					<td>{{produit.description}}</td>
					<td>{{produit.prix}}</td>
					<td>
						<a class="btn text-decoration-none badge bg-success" href="{{path('edition_produit', {id:produit.id})}}">Modifier</a>
						<a class="btn text-decoration-none badge bg-danger" href="{{path('suppression_produit',{id:produit.id})}}">Supprimer</a>
					</td>
				</tr>

			{% endfor %}


		</tbody>

	</table>

{% endblock %}
